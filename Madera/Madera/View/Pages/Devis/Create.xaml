        <Button Content="retour" Margin="0,9,10,0" VerticalAlignment="Top" Width="75" Background="#FFA3A3A3" mah:ControlsHelper.ContentCharacterCasing="Lower" Click="Click_btn_retour" HorizontalAlignment="Right"/>
        <iconPacks:PackIconModern Width="75" Height="75" Kind="UserTie" VerticalContentAlignment="Stretch" Margin="0,60,10,0" HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="301" Margin="376,318,0,0" Stroke="Black" VerticalAlignment="Top" Width="544"/>
        <ComboBox x:Name="ListeClient"  HorizontalAlignment="Left" Margin="515,375,0,0" VerticalAlignment="Top" Width="248"/>
        <Label Content="Nom du client :" HorizontalAlignment="Left" Margin="515,340,0,0" VerticalAlignment="Top"/>
        <Button Content="Ajouter" HorizontalAlignment="Left" Margin="515,424,0,0" VerticalAlignment="Top" Width="75" Click="btn_add"/>

    </Grid>
</Page>
