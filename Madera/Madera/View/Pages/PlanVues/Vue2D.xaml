<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Madera.View.Pages.PlanVues"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Madera.View.Pages.PlanVues.Vue2D"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vue2D">

    <Grid Margin="0,0,0,9.6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <ListBox x:Name="listModule" ItemsSource="{Binding ModuleList}"
         ScrollViewer.CanContentScroll="False" Margin="20,202,251,23" IsSynchronizedWithCurrentItem="False">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!--<Image Source="{Binding idModule}" Height="100"/>-->
                        <StackPanel Margin="10,0">
                            <TextBlock Text="{Binding nom}" FontWeight="Bold" />
                            <TextBlock Text="{Binding hauteur}"/>
                            <TextBlock Text="{Binding largeur}" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
