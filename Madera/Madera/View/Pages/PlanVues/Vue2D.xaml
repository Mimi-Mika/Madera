<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Madera.View.Pages.PlanVues"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:system="clr-namespace:System;assembly=mscorlib" x:Class="Madera.View.Pages.PlanVues.Vue2D"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vue2D">

    <Grid Margin="-4,0,4,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Height="105" Width="90" Margin="228,10,82,325" >
            <TextBlock Text="Type module" HorizontalAlignment="Center"  FontWeight="Heavy" Margin="0,0,0,5"/>
            <ListBox x:Name="listTypeModule" BorderThickness="1" BorderBrush="Black"
                ScrollViewer.CanContentScroll="False" IsSynchronizedWithCurrentItem="False" SelectionChanged="listTypeModule_SelectionChanged" Grid.ColumnSpan="2" >
                <ListBox.ItemTemplate >
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding nomType}" Height="30" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>


        <StackPanel Width="150" Height="200" Margin="73,110,177,130" >
            <TextBlock Text="Module" HorizontalAlignment="Center"  FontWeight="Heavy" Margin="0,0,0,5"/>
            <ListBox x:Name="listModule"  BorderThickness="1" BorderBrush="Black"
             ScrollViewer.CanContentScroll="False" IsSynchronizedWithCurrentItem="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding imgUrl}" Height="90" Width="90" Margin="1"/>
                            <StackPanel Margin="1">
                                <TextBlock Text="{Binding nom}" FontWeight="Bold" />
                                <TextBlock Text="{Binding hauteur}"/>
                                <TextBlock Text="{Binding largeur}" FontStyle="Italic"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>


        <StackPanel Height="125" Width="90" Grid.Column="1">
            <TextBlock Text="Couleur" HorizontalAlignment="Center"  FontWeight="Heavy" Margin="0,0,0,5"/>
            <ListBox x:Name="listCouleur"  BorderThickness="1" BorderBrush="Black"
                ScrollViewer.CanContentScroll="False"  IsSynchronizedWithCurrentItem="False">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" >
                            <Border BorderThickness="1" BorderBrush="Black">
                                <Image Source="{Binding imgUrl}" Height="30" Width="30" Margin="1"/>
                            </Border>
                            <StackPanel Margin="1">
                                <TextBlock Text="{Binding nom}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+"/>
                                    <TextBlock Text="{Binding surCout}"/>
                                    <TextBlock Text="%"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>



        <StackPanel Margin="0,0,310,335" Height="105" Width="90" >
            <TextBlock Text="Gamme" HorizontalAlignment="Center"  FontWeight="Heavy" Margin="0,0,0,5"/>
            <ListBox x:Name="listGamme"  BorderThickness="1" BorderBrush="Black"
                ScrollViewer.CanContentScroll="False"  IsSynchronizedWithCurrentItem="False" SelectionChanged="listGamme_SelectionChanged" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border BorderThickness="1" BorderBrush="Black">
                                <Image Source="{Binding imgUrl}" Height="30" Width="30"  Margin="1"/>
                            </Border>
                            <StackPanel  Margin="1">
                                <TextBlock Text="{Binding nom}" FontWeight="Bold" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>


        <StackPanel  Height="105" Width="90" Margin="44,325,266,10" >
            <TextBlock Text="Finition" HorizontalAlignment="Center"  FontWeight="Heavy" Margin="0,0,0,5"/>
            <ListBox x:Name="listFinition" BorderThickness="1" BorderBrush="Black"
                ScrollViewer.CanContentScroll="False"  IsSynchronizedWithCurrentItem="False" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border BorderThickness="1" BorderBrush="Black">
                                <Image Source="{Binding imgUrl}" Height="30" Width="30"  Margin="1"/>
                            </Border>
                            <StackPanel  Margin="1">
                                <TextBlock Text="{Binding nom}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+"/>
                                    <TextBlock Text="{Binding surCout}"/>
                                    <TextBlock Text="%"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>



    </Grid>
</Page>
